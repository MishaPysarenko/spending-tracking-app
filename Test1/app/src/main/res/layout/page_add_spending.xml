<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/PageAddSpending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextAmountSpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Сума Витрат"
                android:inputType="numberDecimal"
                tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TouchTargetSizeCheck" />

            <EditText
                android:id="@+id/editTextDescriptionSpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Опис"
                tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

            <CheckBox
                android:id="@+id/checkBoxStableSpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Стабільні витрати" />

            <Button
                android:id="@+id/buttonAddSpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Додати дохід"
                tools:ignore="HardcodedText,MissingConstraints" />

            <Button
                android:id="@+id/CancelAddSpending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Назад"
                tools:ignore="HardcodedText,MissingConstraints" />


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>