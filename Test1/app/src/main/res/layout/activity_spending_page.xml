<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpendingPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/SpendingPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ListSpending"
            android:layout_width="284dp"
            android:layout_height="468dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="75dp"
            app:layout_constraintBottom_toTopOf="@+id/DelSpending"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text8"
            tools:listitem="@layout/list_item_layout" />

        <TextView
            android:id="@+id/SumSpending"
            android:layout_width="194dp"
            android:layout_height="18dp"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/text8"
            tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck"
            tools:layout_editor_absoluteY="137dp" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:text="Перерахунок:"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck"
            tools:layout_editor_absoluteY="137dp" />

        <Button
            android:id="@+id/DelSpending"
            android:layout_width="116dp"
            android:layout_height="102dp"
            android:layout_marginStart="180dp"
            android:text="Видалити Витрати"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonToBackMainPageInSpending"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/AddSpending"
            android:layout_width="108dp"
            android:layout_height="105dp"
            android:text="Додати Витрати"
            app:layout_constraintBottom_toTopOf="@+id/buttonToBackMainPageInSpending"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonToBackMainPageInSpending"
            android:layout_width="93dp"
            android:layout_height="94dp"
            android:text="Назад"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>